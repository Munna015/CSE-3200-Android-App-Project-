<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@drawable/background_2"
    android:gravity="center"
    android:orientation="vertical"
    android:layout_height="match_parent"
    tools:context=".Upload">

    <Button
        android:id="@+id/Selectbutton"
        android:layout_marginBottom="100dp"
        android:layout_width="200dp"
        android:layout_height="69dp"
        android:text="Select Button"
        android:textSize="20sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/fileName"
        android:layout_marginBottom="100dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="No file is selected" />

    <EditText
        android:id="@+id/edit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Enter PDF name"
        >

    </EditText>
    <Button
        android:id="@+id/Upoloadbutton1"
        android:layout_width="200dp"
        android:layout_height="69dp"
        android:textSize="20sp"
        android:textStyle="bold"
        android:text="CSE Upload Button" />
    <Button
        android:id="@+id/Upoloadbutton2"
        android:layout_width="200dp"
        android:layout_height="69dp"
        android:textSize="20sp"
        android:textStyle="bold"
        android:text="EEE Upload Button" />
    <Button
        android:id="@+id/Upoloadbutton3"
        android:layout_width="200dp"
        android:layout_height="69dp"
        android:textSize="20sp"
        android:textStyle="bold"
        android:text="ME Upload Button" />
    <Button
        android:id="@+id/Upoloadbutton4"
        android:layout_width="200dp"
        android:layout_height="69dp"
        android:textSize="20sp"
        android:textStyle="bold"
        android:text="Civil Upload Button" />


</LinearLayout>